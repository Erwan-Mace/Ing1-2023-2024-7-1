#include <stdio.h>
#include <unistd.h> // pour la fonction sleep(1)
#include <stdlib.h> // pour la fonction system("cls")

int main() {
    int seconds = 120;
    while (seconds >= 0) {
        printf("Temps restant : %d", seconds);
        fflush(stdout); // Forcer le vidage du tampon de sortie
        sleep(1); // Attendre 1 seconde
        seconds--; // Le nombre de seconde diminue de 1 Ã  chaque boucle
        system("cls"); // Nettoyer la console
    }

    printf("Time's up!\n");

    return 0;
}
